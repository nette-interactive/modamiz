@using SevenSpikes.Nop.Plugins.RichBlog.Models;

@model RichBlogPrevNextModel

@if (!string.IsNullOrEmpty(Model.PreviousBlogPostTitle) || !string.IsNullOrEmpty(Model.NextBlogPostTitle))
{
    <div class='post-navigation'>
        @if (!string.IsNullOrEmpty(Model.PreviousBlogPostTitle))
        {
            <a href='@Model.PreviousBlogPostSeName' title='@Model.PreviousBlogPostTitle' class='prev'>
                <span class="flip">@T("SevenSpikes.Themes.Uptown.RichBLog.PreviousPost")</span>
                <span class="flop">@Model.PreviousBlogPostTitle</span>
            </a>
        }

        @if (!string.IsNullOrEmpty(Model.NextBlogPostTitle))
        {
            <a href='@Model.NextBlogPostSeName' title='@Model.NextBlogPostTitle' class='next'>
                <span class="flip">@T("SevenSpikes.Themes.Uptown.RichBLog.NextPost")</span> 
                <span class="flop">@Model.NextBlogPostTitle</span>
            </a>
        }
    </div>
}